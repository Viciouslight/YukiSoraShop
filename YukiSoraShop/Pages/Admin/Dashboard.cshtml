@page
@model YukiSoraShop.Pages.Admin.AdminDashboardModel
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <!-- HEADER -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark">
                <i class="fas fa-chart-line text-primary me-2"></i> Bảng điều khiển quản trị
            </h2>
            <p class="text-muted mb-0">Tổng quan hệ thống, doanh thu và hoạt động gần đây</p>
        </div>
        <span class="badge bg-primary fs-6 px-3 py-2 shadow-sm">
            <i class="fas fa-user-shield me-2"></i>Admin
        </span>
    </div>

    <!-- STATISTICS CARDS -->
    <div class="row g-4">
        <div class="col-md-3 col-sm-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="fw-bold mb-1 text-primary">@Model.TotalUsers</h5>
                        <p class="text-muted mb-0">Người dùng</p>
                    </div>
                    <div class="bg-primary bg-opacity-10 p-3 rounded-circle">
                        <i class="fas fa-users text-primary fa-lg"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 col-sm-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="fw-bold mb-1 text-success">@Model.TotalProducts</h5>
                        <p class="text-muted mb-0">Sản phẩm</p>
                    </div>
                    <div class="bg-success bg-opacity-10 p-3 rounded-circle">
                        <i class="fas fa-box text-success fa-lg"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 col-sm-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="fw-bold mb-1 text-warning">@Model.TotalOrders</h5>
                        <p class="text-muted mb-0">Đơn hàng</p>
                    </div>
                    <div class="bg-warning bg-opacity-10 p-3 rounded-circle">
                        <i class="fas fa-shopping-bag text-warning fa-lg"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 col-sm-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="fw-bold mb-1 text-danger">@Model.AwaitingCashOrders</h5>
                        <p class="text-muted mb-0">Chờ thanh toán</p>
                    </div>
                    <div class="bg-danger bg-opacity-10 p-3 rounded-circle">
                        <i class="fas fa-money-bill-wave text-danger fa-lg"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- REVENUE CARD -->
    <div class="row g-4 mt-1">
        <div class="col-lg-4 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex flex-column justify-content-center text-center">
                    <h6 class="text-muted mb-2">Tổng doanh thu</h6>
                    <h3 class="fw-bold text-success">@Model.TotalRevenue.ToString("N0") VNĐ</h3>
                    <p class="small text-muted mb-0">Cập nhật theo thời gian thực</p>
                </div>
            </div>
        </div>

        <!-- CHART SECTION -->
        <div class="col-lg-8 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white border-0 fw-semibold text-primary">
                    <i class="fas fa-chart-bar me-2"></i> Doanh thu & Đơn hàng gần đây
                </div>
                <div class="card-body">
                    <canvas id="overviewChart" style="height: 250px;"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- QUICK LINKS SECTION -->
    <div class="row g-4 mt-1">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100 text-center">
                <div class="card-body">
                    <i class="fas fa-credit-card fa-3x text-primary mb-3"></i>
                    <h5 class="fw-semibold mb-2">Phương thức thanh toán</h5>
                    <p class="text-muted small mb-3">Quản lý các phương thức thanh toán</p>
                    <a asp-page="/Admin/PaymentMethods" class="btn btn-primary btn-sm">
                        <i class="fas fa-arrow-right me-1"></i>Xem chi tiết
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100 text-center">
                <div class="card-body">
                    <i class="fas fa-hand-holding-usd fa-3x text-success mb-3"></i>
                    <h5 class="fw-semibold mb-2">Thanh toán tiền mặt</h5>
                    <p class="text-muted small mb-3">Xác nhận đơn hàng thanh toán tiền mặt</p>
                    <a asp-page="/Admin/CashPayments" class="btn btn-success btn-sm">
                        <i class="fas fa-arrow-right me-1"></i>Xem chi tiết
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100 text-center">
                <div class="card-body">
                    <i class="fas fa-users-cog fa-3x text-warning mb-3"></i>
                    <h5 class="fw-semibold mb-2">Quản lý tài khoản</h5>
                    <p class="text-muted small mb-3">Quản lý người dùng và phân quyền</p>
                    <a asp-page="/Admin/AccountManagement" class="btn btn-warning btn-sm">
                        <i class="fas fa-arrow-right me-1"></i>Xem chi tiết
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- SYSTEM INFO SECTION -->
    <div class="row mt-4">
        <div class="col-lg-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white fw-semibold">
                    <i class="fas fa-info-circle text-primary me-2"></i> Thông tin hệ thống
                </div>
                <div class="card-body">
                    <p class="text-muted">
                        Xin chào, <strong>Admin!</strong> Đây là trung tâm điều khiển của YukiSora Shop.
                        Bạn có thể theo dõi thống kê người dùng, sản phẩm, đơn hàng và doanh thu theo thời gian thực.
                    </p>
                    <ul class="list-unstyled mb-0">
                        <li><i class="fas fa-check-circle text-success me-2"></i> Cập nhật số liệu trực tiếp qua SignalR</li>
                        <li><i class="fas fa-check-circle text-success me-2"></i> Bảo mật phân quyền quản trị viên</li>
                        <li><i class="fas fa-check-circle text-success me-2"></i> Thiết kế responsive, thân thiện trên mọi thiết bị</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const ctx = document.getElementById('overviewChart');
            if (!ctx) {
                console.error("Không tìm thấy phần tử canvas #overviewChart");
                return;
            }

            const overviewChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: ['T1', 'T2', 'T3', 'T4', 'T5', 'T6'],
                    datasets: [
                        {
                            label: 'Doanh thu (VNĐ)',
                            data: [12000000, 18000000, 14000000, 21000000, 26000000, 32000000],
                            borderColor: '#198754',
                            backgroundColor: 'rgba(25,135,84,0.1)',
                            fill: true,
                            tension: 0.4
                        },
                        {
                            label: 'Đơn hàng',
                            data: [80, 95, 70, 110, 130, 160],
                            borderColor: '#0d6efd',
                            backgroundColor: 'rgba(13,110,253,0.1)',
                            fill: true,
                            tension: 0.4
                        }
                    ]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: { usePointStyle: true }
                        }
                    },
                    scales: { y: { beginAtZero: true } }
                }
            });
        });

        // SignalR cập nhật dashboard
        (() => {
            const connection = new signalR.HubConnectionBuilder()
                .withUrl("/hubs/adminDashboard")
                .withAutomaticReconnect()
                .build();

            connection.on("DashboardSummaryUpdated", summary => {
                if (!summary) return;
                // Update UI with new summary data
                console.log("Dashboard updated", summary);
            });

            connection.start().catch(err => console.error("SignalR error:", err));
        })();
    </script>
}
