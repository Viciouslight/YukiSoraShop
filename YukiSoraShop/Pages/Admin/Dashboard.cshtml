@page
@model YukiSoraShop.Pages.Admin.AdminDashboardModel
@{
    ViewData["Title"] = "Analytics";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="page-title">
    Analytics
</div>

<div class="stats-container">
    <div class="stat-card green">
        <div class="stat-icon">
            <i class="fas fa-wallet"></i>
        </div>
        <div class="stat-title">TOTAL REVENUE</div>
        <div class="stat-value">@Model.TotalRevenue.ToString("C0")</div>
        <div class="stat-trend">
            <i class="fas fa-arrow-up trend-up"></i>
            <span>Revenue increase</span>
        </div>
    </div>

    <div class="stat-card pink">
        <div class="stat-icon">
            <i class="fas fa-users"></i>
        </div>
        <div class="stat-title">TOTAL USERS</div>
        <div class="stat-value">@Model.TotalUsers</div>
        <div class="stat-trend">
            <i class="fas fa-arrows-alt-h"></i>
            <span>Stable</span>
        </div>
    </div>

    <div class="stat-card orange">
        <div class="stat-icon">
            <i class="fas fa-user-plus"></i>
        </div>
        <div class="stat-title">NEW USERS</div>
        <div class="stat-value">@Model.NewUsers</div>
        <div class="stat-trend">
            <i class="fas fa-arrow-up trend-up"></i>
            <span>Last 30 days</span>
        </div>
    </div>

    <div class="stat-card blue">
        <div class="stat-icon">
            <i class="fas fa-server"></i>
        </div>
        <div class="stat-title">SERVER UPTIME</div>
        <div class="stat-value">99.9%</div>
        <div class="stat-trend">
            <span>Excellent</span>
        </div>
    </div>

    <div class="stat-card purple">
        <div class="stat-icon">
            <i class="fas fa-tasks"></i>
        </div>
        <div class="stat-title">TO DO LIST</div>
        <div class="stat-value">7 tasks</div>
        <div class="stat-trend">
            <span>Pending</span>
        </div>
    </div>

    <div class="stat-card red">
        <div class="stat-icon">
            <i class="fas fa-exclamation-triangle"></i>
        </div>
        <div class="stat-title">ISSUES</div>
        <div class="stat-value">3</div>
        <div class="stat-trend">
            <i class="fas fa-arrow-up trend-down"></i>
            <span>Needs attention</span>
        </div>
    </div>
</div>

<div class="content-card">
    <div class="card-header">
        <h5><i class="fas fa-chart-line text-primary"></i> Overview Statistics</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4 mb-3">
                <div class="d-flex align-items-center">
                    <div class="stat-icon blue me-3" style="width: 50px; height: 50px; font-size: 1.2rem;">
                        <i class="fas fa-box"></i>
                    </div>
                    <div>
                        <div class="stat-title">Total Products</div>
                        <div class="stat-value" style="font-size: 1.5rem;">@Model.TotalProducts</div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="d-flex align-items-center">
                    <div class="stat-icon orange me-3" style="width: 50px; height: 50px; font-size: 1.2rem;">
                        <i class="fas fa-shopping-bag"></i>
                    </div>
                    <div>
                        <div class="stat-title">Total Orders</div>
                        <div class="stat-value" style="font-size: 1.5rem;">@Model.TotalOrders</div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="d-flex align-items-center">
                    <div class="stat-icon green me-3" style="width: 50px; height: 50px; font-size: 1.2rem;">
                        <i class="fas fa-dollar-sign"></i>
                    </div>
                    <div>
                        <div class="stat-title">Total Revenue</div>
                        <div class="stat-value" style="font-size: 1.5rem;">@Model.TotalRevenue.ToString("C0")</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="content-card">
            <div class="card-header">
                <h5>GRAPH</h5>
            </div>
            <div class="card-body">
                <div class="text-center text-muted py-5">
                    <i class="fas fa-chart-bar fa-3x mb-3"></i>
                    <p>Chart placeholder</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="content-card">
            <div class="card-header">
                <h5>GRAPH</h5>
            </div>
            <div class="card-body">
                <div class="text-center text-muted py-5">
                    <i class="fas fa-chart-line fa-3x mb-3"></i>
                    <p>Chart placeholder</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="content-card">
            <div class="card-header">
                <h5>ADVERT</h5>
            </div>
            <div class="card-body">
                <div class="text-center text-muted py-5">
                    <i class="fas fa-ad fa-3x mb-3"></i>
                    <p>Advertisement area</p>
                </div>
            </div>
        </div>
    </div>
</div>
