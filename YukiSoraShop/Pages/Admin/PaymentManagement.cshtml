@page
@model YukiSoraShop.Pages.Admin.PaymentManagementModel
@{
    ViewData["Title"] = "Qu?n lý giao d?ch thanh toán";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">
        <i class="fas fa-money-check-alt me-2 text-primary"></i> Qu?n lý giao d?ch thanh toán
    </h2>
    <div>
        <button class="btn btn-outline-primary me-2" onclick="window.location.reload()">
            <i class="fas fa-sync-alt me-1"></i>Làm m?i
        </button>
        <a asp-page="/Admin/Dashboard" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Dashboard
        </a>
    </div>
</div>

@if (!string.IsNullOrEmpty(TempData["ErrorMessage"] as string))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Stats Cards -->
<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                            <i class="fas fa-receipt fa-2x text-primary"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="text-muted mb-1">T?ng giao d?ch</h6>
                        <h3 class="fw-bold mb-0">@Model.TotalPayments</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-success bg-opacity-10 rounded-circle p-3">
                            <i class="fas fa-check-circle fa-2x text-success"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="text-muted mb-1">Thành công</h6>
                        <h3 class="fw-bold text-success mb-0">@Model.PaidCount</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-warning bg-opacity-10 rounded-circle p-3">
                            <i class="fas fa-clock fa-2x text-warning"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="text-muted mb-1">Ch? x? lý</h6>
                        <h3 class="fw-bold text-warning mb-0">@Model.PendingCount</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-success bg-opacity-10 rounded-circle p-3">
                            <i class="fas fa-dollar-sign fa-2x text-success"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="text-muted mb-1">Doanh thu</h6>
                        <h3 class="fw-bold text-success mb-0">
                            @Model.TotalRevenue.ToString("N0") ?
                        </h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Payments Table -->
<div class="card border-0 shadow-sm">
    <div class="card-header bg-white border-0 py-3">
        <h5 class="mb-0 fw-semibold">
            <i class="fas fa-list text-primary me-2"></i>Danh sách giao d?ch
        </h5>
    </div>
    <div class="card-body p-0">
        @if (!Model.Payments.Any())
        {
            <div class="alert alert-info m-3">
                <i class="fas fa-info-circle me-2"></i>Ch?a có giao d?ch nào.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 5%;">ID</th>
                            <th style="width: 15%;">Mã giao d?ch</th>
                            <th style="width: 10%;">??n hàng</th>
                            <th style="width: 12%;">Ph??ng th?c</th>
                            <th style="width: 12%;" class="text-end">S? ti?n</th>
                            <th style="width: 12%;" class="text-center">Tr?ng thái</th>
                            <th style="width: 15%;">Ngày t?o</th>
                            <th style="width: 10%;" class="text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var payment in Model.Payments)
                        {
                            <tr>
                                <td><strong class="text-muted">#@payment.PaymentId</strong></td>
                                <td>
                                    <small class="font-monospace text-primary">
                                        @(payment.TransactionRef ?? $"PMT-{payment.PaymentId:D6}")
                                    </small>
                                </td>
                                <td>
                                    <a href="#" class="text-decoration-none fw-semibold">
                                        <i class="fas fa-shopping-cart me-1"></i>#@payment.OrderId
                                    </a>
                                </td>
                                <td>
                                    @if (payment.PaymentMethod == "VNPay")
                                    {
                                        <span class="badge bg-primary">
                                            <i class="fas fa-credit-card me-1"></i>VNPay
                                        </span>
                                    }
                                    else if (payment.PaymentMethod == "Cash")
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-money-bill-wave me-1"></i>Cash
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="fas fa-wallet me-1"></i>@payment.PaymentMethod
                                        </span>
                                    }
                                </td>
                                <td class="text-end">
                                    <strong class="text-success">@payment.Amount.ToString("N0") ?</strong>
                                </td>
                                <td class="text-center">
                                    @switch (payment.Status)
                                    {
                                        case Domain.Enums.PaymentStatus.Paid:
                                            <span class="badge bg-success px-3 py-2">
                                                <i class="fas fa-check-circle me-1"></i>@payment.StatusDisplay
                                            </span>
                                            break;
                                        case Domain.Enums.PaymentStatus.Pending:
                                            <span class="badge bg-warning text-dark px-3 py-2">
                                                <i class="fas fa-clock me-1"></i>@payment.StatusDisplay
                                            </span>
                                            break;
                                        case Domain.Enums.PaymentStatus.Canceled:
                                            <span class="badge bg-danger px-3 py-2">
                                                <i class="fas fa-times-circle me-1"></i>@payment.StatusDisplay
                                            </span>
                                            break;
                                        case Domain.Enums.PaymentStatus.Refunded:
                                            <span class="badge bg-info px-3 py-2">
                                                <i class="fas fa-undo me-1"></i>@payment.StatusDisplay
                                            </span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary px-3 py-2">@payment.StatusDisplay</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    <small class="text-muted">
                                        <i class="fas fa-calendar me-1"></i>@payment.CreatedAtDisplay
                                    </small>
                                </td>
                                <td class="text-center">
                                    <button class="btn btn-sm btn-outline-info" 
                                            data-bs-toggle="modal" 
                                            data-bs-target="#paymentDetailModal"
                                            onclick="loadPaymentDetail(@payment.PaymentId)"
                                            title="Xem chi ti?t">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<!-- Payment Detail Modal -->
<div class="modal fade" id="paymentDetailModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">
                    <i class="fas fa-file-invoice me-2"></i>Chi ti?t giao d?ch
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="paymentDetailContent">
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="text-muted mt-3">?ang t?i d? li?u...</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>?óng
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function loadPaymentDetail(paymentId) {
            const content = document.getElementById('paymentDetailContent');
            
            // Show loading spinner
            content.innerHTML = `
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="text-muted mt-3">?ang t?i d? li?u...</p>
                </div>`;
            
            // Fetch payment details via AJAX
            fetch(`?handler=Detail&id=${paymentId}`)
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.json();
                })
                .then(payment => {
                    // Build detail HTML
                    const statusBadge = getStatusBadge(payment.status, payment.statusDisplay);
                    const methodBadge = getMethodBadge(payment.paymentMethod);
                    
                    content.innerHTML = `
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="card border-0 bg-light">
                                    <div class="card-body">
                                        <h6 class="text-muted mb-3"><i class="fas fa-info-circle me-2"></i>Thông tin giao d?ch</h6>
                                        <dl class="row mb-0">
                                            <dt class="col-sm-5">Payment ID:</dt>
                                            <dd class="col-sm-7"><strong>#${payment.paymentId}</strong></dd>
                                            
                                            <dt class="col-sm-5">Order ID:</dt>
                                            <dd class="col-sm-7"><strong>#${payment.orderId}</strong></dd>
                                            
                                            <dt class="col-sm-5">Mã giao d?ch:</dt>
                                            <dd class="col-sm-7"><code>${payment.transactionRef || 'N/A'}</code></dd>
                                            
                                            <dt class="col-sm-5">Ph??ng th?c:</dt>
                                            <dd class="col-sm-7">${methodBadge}</dd>
                                            
                                            <dt class="col-sm-5">Tr?ng thái:</dt>
                                            <dd class="col-sm-7">${statusBadge}</dd>
                                        </dl>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="card border-0 bg-light">
                                    <div class="card-body">
                                        <h6 class="text-muted mb-3"><i class="fas fa-dollar-sign me-2"></i>Chi ti?t thanh toán</h6>
                                        <dl class="row mb-0">
                                            <dt class="col-sm-5">S? ti?n:</dt>
                                            <dd class="col-sm-7"><strong class="text-success fs-5">${payment.amount.toLocaleString('vi-VN')} ?</strong></dd>
                                            
                                            <dt class="col-sm-5">Ti?n t?:</dt>
                                            <dd class="col-sm-7">${payment.currency}</dd>
                                            
                                            <dt class="col-sm-5">T?ng ??n hàng:</dt>
                                            <dd class="col-sm-7">${payment.orderTotal.toLocaleString('vi-VN')} ?</dd>
                                            
                                            <dt class="col-sm-5">Tr?ng thái ??n:</dt>
                                            <dd class="col-sm-7"><span class="badge bg-info">${payment.orderStatus}</span></dd>
                                            
                                            <dt class="col-sm-5">Ngày t?o:</dt>
                                            <dd class="col-sm-7">${payment.createdAtDisplay}</dd>
                                        </dl>
                                    </div>
                                </div>
                            </div>
                        </div>`;
                })
                .catch(error => {
                    console.error('Error loading payment detail:', error);
                    content.innerHTML = `
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            Không th? t?i chi ti?t giao d?ch. Vui lòng th? l?i.
                        </div>`;
                });
        }
        
        function getStatusBadge(status, displayText) {
            const statusMap = {
                0: '<span class="badge bg-warning text-dark"><i class="fas fa-clock me-1"></i>' + displayText + '</span>',
                1: '<span class="badge bg-success"><i class="fas fa-check-circle me-1"></i>' + displayText + '</span>',
                2: '<span class="badge bg-info"><i class="fas fa-undo me-1"></i>' + displayText + '</span>',
                3: '<span class="badge bg-danger"><i class="fas fa-times-circle me-1"></i>' + displayText + '</span>'
            };
            return statusMap[status] || '<span class="badge bg-secondary">' + displayText + '</span>';
        }
        
        function getMethodBadge(method) {
            if (method === 'VNPay') {
                return '<span class="badge bg-primary"><i class="fas fa-credit-card me-1"></i>VNPay</span>';
            } else if (method === 'Cash') {
                return '<span class="badge bg-success"><i class="fas fa-money-bill-wave me-1"></i>Cash</span>';
            }
            return '<span class="badge bg-secondary"><i class="fas fa-wallet me-1"></i>' + method + '</span>';
        }
        
        // Auto dismiss alerts
        setTimeout(() => {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
}
