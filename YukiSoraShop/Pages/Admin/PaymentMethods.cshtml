@page
@model YukiSoraShop.Pages.Admin.PaymentMethodsModel
@{
    ViewData["Title"] = "Quản lý phương thức thanh toán";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">
        <i class="fas fa-credit-card me-2 text-primary"></i> Quản lý phương thức thanh toán
    </h2>
    <a class="btn btn-outline-secondary" href="/Admin/Dashboard">
        <i class="fas fa-arrow-left"></i> Về Dashboard
    </a>
</div>

@await Html.PartialAsync("_Alerts")

@if (!string.IsNullOrEmpty(Model.StatusMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @Html.Raw(Model.StatusMessage)
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @Model.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (Model.Methods.Count == 0)
{
    <div class="alert alert-info">
        Chưa có phương thức thanh toán nào trong hệ thống.
    </div>
}
else
{
    <div class="table-responsive shadow-sm rounded bg-white">
        <table class="table table-striped align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Tên phương thức</th>
                    <th>Mô tả</th>
                    <th>Trạng thái</th>
                    <th>Cập nhật</th>
                    <th class="text-end">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var method in Model.Methods)
                {
                    <tr>
                        <td class="fw-semibold">
                            @method.Name
                        </td>
                        <td>@(string.IsNullOrWhiteSpace(method.Description) ? "—" : method.Description)</td>
                        <td>
                            @if (method.IsActive)
                            {
                                <span class="badge bg-success">Đang kích hoạt</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Đang tắt</span>
                            }
                        </td>
                        <td>
                            <small class="text-muted">
                                @if (method.ModifiedAt.HasValue)
                                {
                                    <span>@method.ModifiedAt.Value.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</span>
                                }
                                else
                                {
                                    <span>—</span>
                                }
                                @if (!string.IsNullOrWhiteSpace(method.ModifiedBy))
                                {
                                    <span class="d-block">Bởi: @method.ModifiedBy</span>
                                }
                            </small>
                        </td>
                        <td class="text-end">
                            <form method="post" asp-page-handler="SetStatus" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@method.Id" />
                                <input type="hidden" name="isActive" value="@(!method.IsActive)" />
                                @if (method.IsActive)
                                {
                                    <button type="submit" class="btn btn-outline-danger btn-sm"
                                            title="Tắt phương thức này">
                                        <i class="fas fa-ban"></i> Tạm ngưng
                                    </button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-outline-success btn-sm"
                                            title="Kích hoạt lại phương thức">
                                        <i class="fas fa-check"></i> Kích hoạt
                                    </button>
                                }
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
