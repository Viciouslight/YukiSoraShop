@page
@model YukiSoraShop.Pages.Auth.ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Pages/Shared/_AuthLayout.cshtml";
}

<div class="container-fluid">
    <div class="row min-vh-100">
        <!-- Left side with image -->
        <div class="col-lg-6 d-none d-lg-flex align-items-center justify-content-center" 
             style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); position: relative; overflow: hidden;">
            <!-- Background pattern -->
            <div style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; opacity: 0.1;">
                <svg width="100%" height="100%" xmlns="http://www.w3.org/2000/svg">
                    <defs>
                        <pattern id="grid" width="40" height="40" patternUnits="userSpaceOnUse">
                            <path d="M 40 0 L 0 0 0 40" fill="none" stroke="white" stroke-width="1"/>
                        </pattern>
                    </defs>
                    <rect width="100%" height="100%" fill="url(#grid)" />
                </svg>
            </div>
            
            <div class="text-center text-white p-5 position-relative" style="z-index: 2;">
                <div class="mb-4">
                    <i class="fas fa-shield-alt" style="font-size: 4rem; color: rgba(255,255,255,0.9);"></i>
                </div>
                <h2 class="fw-bold mb-3" style="text-shadow: 2px 2px 4px rgba(0,0,0,0.3);">YukiSora Shop</h2>
                <p class="lead mb-4" style="text-shadow: 1px 1px 2px rgba(0,0,0,0.3);">Bảo vệ tài khoản của bạn với mật khẩu mạnh</p>
                <div class="d-flex justify-content-center gap-3">
                    <div class="text-center">
                        <i class="fas fa-lock" style="font-size: 1.5rem; color: rgba(255,255,255,0.8);"></i>
                        <div class="small mt-1">Bảo mật</div>
                    </div>
                    <div class="text-center">
                        <i class="fas fa-user-shield" style="font-size: 1.5rem; color: rgba(255,255,255,0.8);"></i>
                        <div class="small mt-1">An toàn</div>
                    </div>
                    <div class="text-center">
                        <i class="fas fa-key" style="font-size: 1.5rem; color: rgba(255,255,255,0.8);"></i>
                        <div class="small mt-1">Mã hóa</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right side with form -->
        <div class="col-lg-6 d-flex align-items-center justify-content-center">
            <div class="w-100" style="max-width: 400px;">
                <div class="text-center mb-4">
                    <div class="mb-3">
                        <div class="d-inline-flex align-items-center justify-content-center rounded-circle bg-primary text-white" 
                             style="width: 60px; height: 60px;">
                            <i class="fas fa-key" style="font-size: 1.5rem;"></i>
                        </div>
                    </div>
                    <h2 class="fw-bold text-dark mb-2">Đổi Mật Khẩu</h2>
                    <p class="text-muted">Cập nhật mật khẩu để giữ tài khoản an toàn</p>
                </div>

                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger" role="alert">
                        <i class="fas fa-exclamation-triangle"></i> @Model.ErrorMessage
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                {
                    <div class="alert alert-success" role="alert">
                        <i class="fas fa-check-circle"></i> @Model.SuccessMessage
                    </div>
                }

                <form method="post" class="needs-validation" novalidate>
                    <div class="mb-4">
                        <label for="CurrentPassword" class="form-label fw-semibold">
                            <i class="fas fa-lock text-primary me-2"></i> Mật khẩu hiện tại
                        </label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0">
                                <i class="fas fa-lock text-muted"></i>
                            </span>
                            <input type="password" class="form-control border-start-0" id="CurrentPassword" 
                                   asp-for="Input.CurrentPassword" required placeholder="Nhập mật khẩu hiện tại">
                        </div>
                        <span asp-validation-for="Input.CurrentPassword" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label for="NewPassword" class="form-label fw-semibold">
                            <i class="fas fa-key text-success me-2"></i> Mật khẩu mới
                        </label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0">
                                <i class="fas fa-key text-muted"></i>
                            </span>
                            <input type="password" class="form-control border-start-0" id="NewPassword" 
                                   asp-for="Input.NewPassword" required placeholder="Nhập mật khẩu mới">
                        </div>
                        <span asp-validation-for="Input.NewPassword" class="text-danger small"></span>
                        <div class="form-text">
                            <i class="fas fa-info-circle text-primary"></i> Mật khẩu phải có ít nhất 6 ký tự
                        </div>
                    </div>

                    <div class="mb-4">
                        <label for="ConfirmPassword" class="form-label fw-semibold">
                            <i class="fas fa-check-circle text-info me-2"></i> Xác nhận mật khẩu mới
                        </label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0">
                                <i class="fas fa-check-circle text-muted"></i>
                            </span>
                            <input type="password" class="form-control border-start-0" id="ConfirmPassword" 
                                   asp-for="Input.ConfirmPassword" required placeholder="Xác nhận mật khẩu mới">
                        </div>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg shadow-sm">
                            <i class="fas fa-save me-2"></i> Đổi Mật Khẩu
                        </button>
                    </div>
                </form>

                <div class="text-center mt-4">
                    <a href="/Customer/ViewProfile" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Quay lại Trang Cá Nhân
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Form validation
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();

        // Password confirmation validation
        document.getElementById('ConfirmPassword').addEventListener('input', function() {
            var newPassword = document.getElementById('NewPassword').value;
            var confirmPassword = this.value;
            
            if (newPassword !== confirmPassword) {
                this.setCustomValidity('Mật khẩu không khớp');
            } else {
                this.setCustomValidity('');
            }
        });
    </script>
}
