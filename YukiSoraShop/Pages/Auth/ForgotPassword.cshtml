@page
@model YukiSoraShop.Pages.Auth.ForgotPasswordModel
@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = "~/Pages/Shared/_AuthLayout.cshtml";
}

<div class="container-fluid min-vh-100 d-flex align-items-center">
    <div class="row w-100">
        <!-- Left side - Branding -->
        <div class="col-lg-6 d-none d-lg-flex align-items-center justify-content-center">
            <div class="auth-content text-center">
                <h2 class="text-white mb-4" style="font-size: 4rem; font-weight: 800;">YukiSora Shop</h2>
                <p class="text-white" style="font-size: 1.3rem; font-weight: 300;">Khôi phục quyền truy cập tài khoản của bạn</p>
            </div>
        </div>

        <!-- Right side - Forgot Password Form -->
        <div class="col-lg-6 d-flex align-items-center justify-content-center">
            <div class="w-100" style="max-width: 500px;">
                        <div class="auth-form-container">
                            <div class="text-center mb-4">
                                <a href="/" class="btn btn-outline-secondary btn-sm mb-3">
                                    <i class="fas fa-arrow-left me-2"></i>Về trang chủ
                                </a>
                                <h1 class="auth-title">Quên mật khẩu</h1>
                                <p class="text-muted">Nhập email để nhận liên kết khôi phục mật khẩu</p>
                            </div>

                            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                            {
                                <div class="alert alert-danger" role="alert">
                                    <i class="fas fa-exclamation-triangle"></i> @Model.ErrorMessage
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                            {
                                <div class="alert alert-success" role="alert">
                                    <i class="fas fa-check-circle"></i> 
                                    @Html.Raw(Model.SuccessMessage)
                                </div>
                            }

                            <form method="post" class="auth-form">
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                                <div class="form-group mb-4">
                                    <label asp-for="Input.Email" class="form-label fw-semibold">
                                        <i class="fas fa-envelope text-primary me-2"></i> Email Address
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0">
                                            <i class="fas fa-envelope text-muted"></i>
                                        </span>
                                        <input asp-for="Input.Email" class="form-control border-start-0" placeholder="Enter your email address" />
                                    </div>
                                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                                    <div class="form-text">
                                        <i class="fas fa-info-circle text-primary"></i> We'll send you a reset code
                                    </div>
                                </div>

                                <div class="d-grid mb-3">
                                    <button type="submit" class="btn btn-primary btn-lg shadow-sm">
                                        <i class="fas fa-paper-plane me-2"></i> Send Reset Code
                                    </button>
                                </div>

                                @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                                {
                                    <div class="d-grid mb-3">
                                        <a href="/Auth/ResetPassword?email=@Model.Input.Email" class="btn btn-success btn-lg shadow-sm">
                                            <i class="fas fa-arrow-right me-2"></i> Continue to Reset Password
                                        </a>
                                    </div>
                                }

                                <div class="text-center">
                                    <a asp-page="./Login" class="text-decoration-none">
                                        <i class="fas fa-arrow-left me-2"></i>Quay lại đăng nhập
                                    </a>
                                </div>

                                <hr class="my-4">

                                <div class="text-center">
                                    <p class="mb-0">Chưa có tài khoản? 
                                        <a asp-page="./Register" class="text-decoration-none fw-bold">Đăng ký ngay</a>
                                    </p>
                                </div>
                            </form>
                        </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
