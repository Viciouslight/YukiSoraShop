@page "/Customer/Cart"
@model YukiSoraShop.Pages.Customer.CustomerCartModel
@{
    ViewData["Title"] = "Giỏ hàng - YukiSoraShop";
    Layout = null; // Fullpage layout như Home
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Poppins:wght@600&display=swap" rel="stylesheet" />
</head>

<body style="font-family: 'Inter', sans-serif; background-color: #f8f9fc;">

    <!-- ===== HEADER ===== -->
    <header class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top py-3">
        <div class="container">
            <a class="navbar-brand fw-bold text-primary fs-4" href="/" style="font-family: 'Poppins', sans-serif;">
                <i class="fas fa-bolt me-2 text-warning"></i>YukiSora<span class="text-dark">Shop</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0 fw-semibold">
                    <li class="nav-item"><a class="nav-link text-dark px-3" href="/">Trang chủ</a></li>
                    <li class="nav-item"><a class="nav-link text-dark px-3" href="/Customer/Catalog">Sản phẩm</a></li>
                    <li class="nav-item"><a class="nav-link text-dark px-3" href="/About">Giới thiệu</a></li>
                    <li class="nav-item"><a class="nav-link text-dark px-3" href="/Support">Hỗ trợ</a></li>
                </ul>
            </div>
        </div>
    </header>

    <!-- ===== HERO SECTION ===== -->
    <section class="py-5 text-center text-white bg-gradient-primary">
        <div class="container py-4">
            <h1 class="fw-bold mb-2" style="font-family: 'Poppins', sans-serif;">Giỏ hàng của bạn</h1>
            <p class="lead text-light">Quản lý sản phẩm yêu thích và tiến hành thanh toán nhanh chóng.</p>
        </div>
    </section>

    <!-- ===== MAIN CART CONTENT ===== -->
    <section class="container my-5">
        @if (Model.CartItems.Any())
        {
            <div class="row g-4">
                <!-- LEFT: CART ITEMS -->
                <div class="col-lg-8">
                    @foreach (var item in Model.CartItems)
                    {
                        <div class="card border-0 shadow-sm mb-4 hover-lift">
                            <div class="card-body d-flex align-items-center justify-content-between flex-wrap">
                                <div class="d-flex align-items-center">
                                    <img src="@item.Product.ImageUrl" alt="@item.Product.Name"
                                         class="rounded-3 me-3"
                                         style="width: 90px; height: 90px; object-fit: cover;">
                                    <div>
                                        <h6 class="fw-bold mb-1 text-dark">@item.Product.Name</h6>
                                        <p class="text-muted small mb-2">@item.Product.Category</p>
                                        <span class="text-primary fw-semibold">@item.Product.Price.ToString("N0") VNĐ</span>
                                    </div>
                                </div>

                                <div class="d-flex align-items-center gap-3 mt-3 mt-md-0">
                                    <form method="post" asp-page-handler="UpdateQuantity" class="d-inline">
                                        <input type="hidden" name="productId" value="@item.Product.Id" />
                                        <div class="input-group input-group-sm">
                                            <button type="submit" name="action" value="decrease" class="btn btn-outline-primary">-</button>
                                            <input type="text" readonly class="form-control text-center border-primary" value="@item.Quantity" />
                                            <button type="submit" name="action" value="increase" class="btn btn-outline-primary">+</button>
                                        </div>
                                    </form>

                                    <div class="text-end">
                                        <div class="fw-bold text-primary">@item.TotalPrice.ToString("N0") VNĐ</div>
                                    </div>

                                    <form method="post" asp-page-handler="RemoveItem" class="d-inline">
                                        <input type="hidden" name="productId" value="@item.Product.Id" />
                                        <button type="submit" class="btn btn-outline-danger btn-sm rounded-circle"
                                                title="Xóa sản phẩm"
                                                onclick="return confirm('Xóa sản phẩm này khỏi giỏ hàng?')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- RIGHT: ORDER SUMMARY -->
                <div class="col-lg-4">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <h5 class="fw-bold mb-4 text-primary"><i class="fas fa-receipt me-2"></i>Tổng quan đơn hàng</h5>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Tạm tính:</span>
                                <span>@Model.TotalAmount.ToString("N0") VNĐ</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Vận chuyển:</span>
                                <span class="text-success">Miễn phí</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Thuế (10%):</span>
                                <span>@((Model.TotalAmount * 0.1m).ToString("N0")) VNĐ</span>
                            </div>
                            <hr>
                            <div class="d-flex justify-content-between mb-4">
                                <strong>Tổng cộng:</strong>
                                <strong class="text-primary">@((Model.TotalAmount * 1.1m).ToString("N0")) VNĐ</strong>
                            </div>

                            <form method="post" asp-page-handler="Checkout">
                                <button type="submit" class="btn btn-primary w-100 py-2 fw-semibold">
                                    <i class="fas fa-credit-card me-2"></i> Thanh toán ngay
                                </button>
                            </form>

                            <a href="/Customer/Catalog" class="btn btn-outline-primary w-100 mt-3">
                                <i class="fas fa-arrow-left me-2"></i> Tiếp tục mua hàng
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-shopping-cart fa-4x text-primary mb-4"></i>
                <h3 class="fw-bold text-dark">Giỏ hàng trống</h3>
                <p class="text-muted mb-4">Hãy chọn vài sản phẩm yêu thích để thêm vào giỏ hàng nhé!</p>
                <a href="/Customer/Catalog" class="btn btn-primary px-4 py-2 fw-semibold">
                    <i class="fas fa-store me-2"></i> Khám phá sản phẩm
                </a>
            </div>
        }
    </section>

    <!-- ===== FOOTER ===== -->
    <footer class="bg-dark text-light pt-5 pb-3">
        <div class="container text-center">
            <p class="small mb-2">© 2025 YukiSora Technology. All Rights Reserved.</p>
            <div class="d-flex justify-content-center gap-3">
                <a href="#" class="text-light text-decoration-none">Chính sách bảo mật</a>
                <a href="#" class="text-light text-decoration-none">Điều khoản sử dụng</a>
                <a href="#" class="text-light text-decoration-none">Hỗ trợ</a>
            </div>
        </div>
    </footer>

    <style>
        .bg-gradient-primary {
            background: linear-gradient(135deg, #0d47a1, #1976d2, #42a5f5);
        }

        .card {
            border-radius: 16px;
            transition: all 0.3s ease;
        }

            .card:hover {
                transform: translateY(-3px);
                box-shadow: 0 8px 20px rgba(0,0,0,0.1);
            }

        .btn-primary {
            background: linear-gradient(135deg, #0d47a1, #1976d2);
            border: none;
        }

            .btn-primary:hover {
                background: linear-gradient(135deg, #1565c0, #2196f3);
            }

        .btn-outline-primary {
            border: 1px solid #1976d2;
            color: #1976d2;
        }

            .btn-outline-primary:hover {
                background-color: #1976d2;
                color: white;
            }

        .hover-lift:hover {
            transform: translateY(-5px);
        }
    </style>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
