@page
@model YukiSoraShop.Pages.Customer.CustomerCatalogModel
@{
    ViewData["Title"] = "Home";
    var isAdminOrStaff = User.IsInRole("Administrator") || User.IsInRole("Moderator");
}

@await Html.PartialAsync("_Alerts")

@if (isAdminOrStaff)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i>
        <strong>Lưu ý:</strong> Tài khoản quản trị/nhân viên không thể thêm sản phẩm vào giỏ hàng.
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row mt-5">
    <div class="col-12 d-flex justify-content-between align-items-center">
        <h2 class="mb-4">Featured Products</h2>
        <form method="get" class="d-flex gap-2">
            <input type="hidden" name="size" value="@Model.Size" />
            <input class="form-control" type="text" name="search" value="@Model.Search" placeholder="Search products..." />
            <select class="form-select" name="category" asp-items="Model.CategoryOptions">
                <option value="">-- All categories --</option>
            </select>
            <button class="btn btn-outline-primary" type="submit">Filter</button>
        </form>
    </div>
    <div class="col-12 text-muted">@Model.TotalItems sản phẩm</div>
</div>

<div class="row">
    @foreach (var product in Model.Products)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text flex-grow-1">@product.Description</p>
                    <div class="mt-auto">
                        <p class="card-text">
                            <strong class="text-success">@product.Price.ToString("N0") VNĐ</strong>
                        </p>
                        
                        @if (isAdminOrStaff)
                        {
                            <button type="button" class="btn btn-secondary btn-sm" disabled title="Tài khoản quản trị/nhân viên không thể mua hàng">
                                <i class="fas fa-ban me-1"></i>Add to Cart
                            </button>
                        }
                        else if (product.ProductDetails != null && product.ProductDetails.Any())
                        {
                            <a asp-page="/Customer/ProductDetails" asp-route-id="@product.Id" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-eye me-1"></i>Chọn biến thể
                            </a>
                        }
                        else
                        {
                            <form method="post" asp-page-handler="AddToCart" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@product.Id" />
                                <button type="submit" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-cart-plus me-1"></i>Add to Cart
                                </button>
                            </form>
                        }
                        
                        <a asp-page="/Customer/ProductDetails" asp-route-id="@product.Id" class="btn btn-outline-secondary btn-sm ms-2">
                            <i class="fas fa-info-circle me-1"></i>View Details
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<nav aria-label="Product pagination" class="mt-3">
    <ul class="pagination">
        <li class="page-item @(Model.Page <= 1 ? "disabled" : null)">
            <a class="page-link" href="?page=@(Model.Page - 1)&size=@Model.Size&search=@Model.Search&category=@Model.Category">Previous</a>
        </li>
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.Page ? "active" : null)">
                <a class="page-link" href="?page=@i&size=@Model.Size&search=@Model.Search&category=@Model.Category">@i</a>
            </li>
        }
        <li class="page-item @(Model.Page >= Model.TotalPages ? "disabled" : null)">
            <a class="page-link" href="?page=@(Model.Page + 1)&size=@Model.Size&search=@Model.Search&category=@Model.Category">Next</a>
        </li>
    </ul>
</nav>

@section Scripts {
    <script>
        setTimeout(() => {
            const alertEl = document.querySelector('.alert');
            if (alertEl) {
                const alert = new bootstrap.Alert(alertEl);
                alert.close();
            }
        }, 3000);
    </script>
}

