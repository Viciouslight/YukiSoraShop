@page
@model YukiSoraShop.Pages.Customer.CustomerCatalogModel
@{
    ViewData["Title"] = "YukiSora Tech | Trang chủ";
}

<!-- HERO SECTION -->
<section class="hero-banner d-flex align-items-center text-center text-white" 
         style="background: linear-gradient(135deg,#0d6efd,#6610f2); min-height: 340px;">
    <div class="container">
        <h1 class="display-5 fw-bold mb-3">Khám phá thế giới công nghệ cùng YukiSora Tech</h1>
        <p class="lead mb-4">Laptop, phụ kiện và thiết bị điện tử mới nhất — Giá tốt mỗi ngày.</p>
        <a href="#products" class="btn btn-warning text-dark px-4 py-2 fw-semibold shadow-sm">
            <i class="fas fa-shopping-cart me-2"></i> Mua sắm ngay
        </a>
    </div>
</section>

<!-- FILTER BAR -->
<div class="bg-white py-3 border-bottom sticky-top shadow-sm" style="top: 56px; z-index: 1030;">
    <div class="container">
        <form method="get" class="d-flex flex-wrap justify-content-center align-items-center gap-3">

            <input type="hidden" name="size" value="@Model.Size" />

            <!-- Search -->
            <div class="input-group w-auto">
                <span class="input-group-text bg-white border-end-0"><i class="fas fa-search"></i></span>
                <input class="form-control border-start-0" type="text" name="search" value="@Model.Search" placeholder="Tìm sản phẩm...">
            </div>

            <!-- Category -->
            <select class="form-select w-auto" name="category" asp-items="Model.CategoryOptions">
                <option value="">-- Tất cả danh mục --</option>
            </select>

            <!-- Price Range -->
            <div class="d-flex align-items-center gap-2 flex-wrap">
                <label class="small fw-semibold text-muted mb-0">Giá từ</label>
                <input type="number" class="form-control form-control-sm w-100" name="minPrice" placeholder="0" min="0" 
                       value="@HttpContext.Request.Query["minPrice"]" style="max-width: 110px;">
                <label class="small fw-semibold text-muted mb-0">đến</label>
                <input type="number" class="form-control form-control-sm w-100" name="maxPrice" placeholder="10.000.000" min="0"
                       value="@HttpContext.Request.Query["maxPrice"]" style="max-width: 130px;">
            </div>

            <!-- Sort by -->
            <select class="form-select w-auto" name="sort">
                <option value="">Sắp xếp</option>
                <option value="price_asc" selected="@(HttpContext.Request.Query["sort"] == "price_asc")">Giá tăng dần</option>
                <option value="price_desc" selected="@(HttpContext.Request.Query["sort"] == "price_desc")">Giá giảm dần</option>
            </select>

            <button class="btn btn-primary px-4 fw-semibold" type="submit">
                <i class="fas fa-filter me-1"></i> Lọc sản phẩm
            </button>
        </form>
    </div>
</div>

<!-- ALERT -->
<div class="container mt-3">
    @await Html.PartialAsync("_Alerts")
</div>

<!-- PRODUCT GRID -->
<section id="products" class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
        <h2 class="fw-bold text-dark mb-0">Sản phẩm nổi bật</h2>
        <span class="text-muted small">@Model.TotalItems sản phẩm</span>
    </div>

    <div class="row g-4">
        @foreach (var product in Model.Products)
        {
            <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6">
                <div class="card border-0 shadow-sm rounded-4 h-100 overflow-hidden product-card transition-all">
                    <div class="position-relative">
                        <img src="@product.ImageUrl" alt="@product.Name" class="card-img-top" 
                             style="height:230px; object-fit:cover;">
                        <div class="position-absolute top-0 end-0 m-2">
                            <span class="badge bg-warning text-dark fw-semibold">Hot</span>
                        </div>
                    </div>
                    <div class="card-body d-flex flex-column p-3">
                        <h6 class="fw-bold text-dark text-truncate mb-1">@product.Name</h6>
                        <p class="text-muted small flex-grow-1">@product.Description</p>
                        <p class="fw-bold text-success fs-5 mb-3">@product.Price.ToString("N0") ₫</p>
                        <div class="d-flex gap-2">
                            <form method="post" asp-page-handler="AddToCart" class="flex-fill">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@product.Id" />
                                <button class="btn btn-outline-primary w-100 fw-semibold">
                                    <i class="fas fa-cart-plus me-1"></i> Thêm
                                </button>
                            </form>
                            <a asp-page="/Customer/ProductDetails" asp-route-id="@product.Id"
                               class="btn btn-outline-dark flex-fill fw-semibold">
                                <i class="fas fa-eye me-1"></i> Chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- PAGINATION -->
    <nav class="mt-5">
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.Page <= 1 ? "disabled" : "")">
                <a class="page-link" href="?page=@(Model.Page - 1)&size=@Model.Size&search=@Model.Search&category=@Model.Category">
                    <i class="fas fa-chevron-left"></i>
                </a>
            </li>
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.Page ? "active" : "")">
                    <a class="page-link" href="?page=@i&size=@Model.Size&search=@Model.Search&category=@Model.Category">@i</a>
                </li>
            }
            <li class="page-item @(Model.Page >= Model.TotalPages ? "disabled" : "")">
                <a class="page-link" href="?page=@(Model.Page + 1)&size=@Model.Size&search=@Model.Search&category=@Model.Category">
                    <i class="fas fa-chevron-right"></i>
                </a>
            </li>
        </ul>
    </nav>
</section>

@section Scripts {
    <script>
        // Cập nhật hiển thị giỏ hàng từ TempData nếu có
        document.addEventListener("DOMContentLoaded", () => {
            const cartCount = document.getElementById("cartCount");
            const newCount = "@TempData["CartCount"]";
            if (cartCount && newCount && !isNaN(parseInt(newCount))) {
                cartCount.textContent = newCount;
            }

            // Tự ẩn alert sau 2.5s
            setTimeout(() => {
                const alertEl = document.querySelector('.alert');
                if (alertEl) new bootstrap.Alert(alertEl).close();
            }, 2500);
        });
    </script>

    <script>
        setTimeout(() => {
            const alertEl = document.querySelector('.alert');
            if (alertEl) new bootstrap.Alert(alertEl).close();
        }, 2500);
    </script>

    <style>
        .product-card { transition: transform .25s ease, box-shadow .25s ease; }
        .product-card:hover { transform: translateY(-5px); box-shadow: 0 8px 20px rgba(0,0,0,0.1); }
        .hero-banner::after {
            content: "";
            position: absolute;
            inset: 0;
            background: radial-gradient(circle at 20% 40%, rgba(255,255,255,0.15), transparent 70%);
        }
        .pagination .page-link { border-radius: 50% !important; margin: 0 4px; width: 38px; text-align: center; }
        .form-select, .form-control { min-height: 38px; }
    </style>
}
