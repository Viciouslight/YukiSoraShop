@page
@model YukiSoraShop.Pages.Customer.CustomerCatalogModel
@{
    ViewData["Title"] = "Home";
}

@await Html.PartialAsync("_Alerts")

<div class="row">
    <div class="col-12">
        <h1 class="mb-4">Welcome to RazorPages Shop</h1>
        <p class="lead">Explore our products and manage your profile and cart!</p>
    </div>
</div>

<div class="row">
    <div class="col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fas fa-user fa-3x text-primary mb-3"></i>
                <h5 class="card-title">View Profile</h5>
                <p class="card-text">Check and manage your personal information, contact details, and account settings.</p>
                <a href="/Customer/Profile" class="btn btn-primary">Go to Profile</a>
            </div>
        </div>
    </div>
    <div class="col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fas fa-shopping-cart fa-3x text-success mb-3"></i>
                <h5 class="card-title">View Cart</h5>
                <p class="card-text">Review your selected items, manage quantities, and proceed to checkout.</p>
                <a href="/Customer/Cart" class="btn btn-success">Go to Cart</a>
            </div>
        </div>
    </div>
</div>

<div class="row mt-5">
    <div class="col-12 d-flex justify-content-between align-items-center">
        <h2 class="mb-4">Featured Products</h2>
        <form method="get" class="d-flex gap-2">
            <input type="hidden" name="size" value="@Model.Size" />
            <input class="form-control" type="text" name="search" value="@Model.Search" placeholder="Search products..." />
            <button class="btn btn-outline-primary" type="submit">Search</button>
        </form>
    </div>
    <div class="col-12 text-muted">@Model.TotalItems sản phẩm</div>
</div>

<div class="row">
    @foreach (var product in Model.Products)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text flex-grow-1">@product.Description</p>
                    <div class="mt-auto">
                        <p class="card-text">
                            <strong class="text-success">@product.Price.ToString("N0") VNĐ</strong>
                        </p>
                        <form method="post" asp-page-handler="AddToCart" class="d-inline">
                            <input type="hidden" name="id" value="@product.Id" />
                            <button type="submit" class="btn btn-outline-primary btn-sm">Add to Cart</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<nav aria-label="Product pagination" class="mt-3">
    <ul class="pagination">
        <li class="page-item @(Model.Page <= 1 ? "disabled" : null)">
            <a class="page-link" href="?page=@(Model.Page-1)&size=@Model.Size&search=@Model.Search&category=@Model.Category">Previous</a>
        </li>
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.Page ? "active" : null)">
                <a class="page-link" href="?page=@i&size=@Model.Size&search=@Model.Search&category=@Model.Category">@i</a>
            </li>
        }
        <li class="page-item @(Model.Page >= Model.TotalPages ? "disabled" : null)">
            <a class="page-link" href="?page=@(Model.Page+1)&size=@Model.Size&search=@Model.Search&category=@Model.Category">Next</a>
        </li>
    </ul>
    </nav>

@section Scripts { }


