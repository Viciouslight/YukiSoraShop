@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="row">
    <div class="col-12">
        <h1 class="mb-4">Welcome to RazorPages Shop</h1>
        <p class="lead">Explore our products and manage your profile and cart!</p>
    </div>
</div>

<div class="row">
    <div class="col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fas fa-user fa-3x text-primary mb-3"></i>
                <h5 class="card-title">View Profile</h5>
                <p class="card-text">Check and manage your personal information, contact details, and account settings.</p>
                <a href="/ViewProfile" class="btn btn-primary">Go to Profile</a>
            </div>
        </div>
    </div>
    <div class="col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fas fa-shopping-cart fa-3x text-success mb-3"></i>
                <h5 class="card-title">View Cart</h5>
                <p class="card-text">Review your selected items, manage quantities, and proceed to checkout.</p>
                <a href="/ViewCart" class="btn btn-success">Go to Cart</a>
            </div>
        </div>
    </div>
</div>

<div class="row mt-5">
    <div class="col-12">
        <h2 class="mb-4">Featured Products</h2>
    </div>
</div>

<div class="row">
    @foreach (var product in Model.Products)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text flex-grow-1">@product.Description</p>
                    <div class="mt-auto">
                        <p class="card-text">
                            <strong class="text-success">@product.Price.ToString("N0") VNĐ</strong>
                        </p>
                        <button class="btn btn-outline-primary btn-sm" onclick="addToCart(@product.Id, '@product.Name', @product.Price)">
                            Add to Cart
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        function addToCart(id, name, price) {
            // Simulate adding to cart
            let currentCount = parseInt(document.getElementById('cartCount').textContent);
            document.getElementById('cartCount').textContent = currentCount + 1;

            alert(`Added "${name}" to cart!`);
        }
    </script>
}