@page
@model YukiSoraShop.Pages.Customer.CustomerOrdersModel
@{
    ViewData["Title"] = "Đơn hàng của tôi";
    Layout = "~/Pages/Shared/_AuthLayout.cshtml";
}

<div class="container py-4">
    <h2 class="mb-4">Đơn hàng của tôi</h2>

    @if (!Model.Orders.Any())
    {
        <div class="alert alert-info">Bạn chưa có đơn hàng nào.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped align-middle">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Ngày tạo</th>
                        <th>Trạng thái</th>
                        <th class="text-end">Tạm tính (VND)</th>
                        <th class="text-end">Vận chuyển (VND)</th>
                        <th class="text-end">Tổng (VND)</th>
                        <th>Thanh toán</th>
                        <th>Hóa đơn</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var o in Model.Orders)
                {
                    <tr>
                        <td>#@o.OrderId</td>
                        <td>@o.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            <span class="@o.StatusBadgeClass">@o.StatusDisplay</span>
                        </td>
                        <td class="text-end">@o.Subtotal.ToString("N0")</td>
                        <td class="text-end">@o.ShippingFee.ToString("N0")</td>
                        <td class="text-end"><strong>@o.GrandTotal.ToString("N0")</strong></td>
                        <td>
                            <span class="@o.PaymentStatusClass">
                                <i class="@o.PaymentStatusIcon"></i> @o.PaymentStatusDisplay
                            </span>
                        </td>
                        <td>
                            @if (o.InvoiceCount > 0)
                            {
                                <span class="badge bg-info">@o.InvoiceCount</span>
                            }
                            else
                            {
                                <span class="text-muted">0</span>
                            }
                        </td>
                        <td class="text-end">
                            @if (o.ShowPayButton)
                            {
                                <a class="btn btn-sm btn-primary" href="/Orders/Checkout?OrderId=@o.OrderId">
                                    <i class="fas fa-credit-card"></i> Thanh toán
                                </a>
                            }
                            else if (string.Equals(o.Status, "AwaitingCash", StringComparison.OrdinalIgnoreCase))
                            {
                                <a class="btn btn-sm btn-outline-warning" href="/Orders/CashConfirmation?OrderId=@o.OrderId">
                                    <i class="fas fa-money-bill"></i> Chi tiết tiền mặt
                                </a>
                            }
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }
</div>

