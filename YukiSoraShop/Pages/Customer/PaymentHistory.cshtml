@page
@model YukiSoraShop.Pages.Customer.PaymentHistoryModel
@{
    ViewData["Title"] = "L?ch s? thanh toán";
}

<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold">
                    <i class="fas fa-history text-primary me-2"></i>
                    L?ch s? thanh toán
                </h2>
                <a asp-page="/Customer/MyOrders" class="btn btn-outline-primary">
                    <i class="fas fa-shopping-bag me-2"></i>Xem ??n hàng
                </a>
            </div>

            @if (!Model.Payments.Any())
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    B?n ch?a có giao d?ch thanh toán nào.
                </div>
            }
            else
            {
                <div class="card shadow-sm">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Mã giao d?ch</th>
                                        <th>??n hàng</th>
                                        <th>Ph??ng th?c</th>
                                        <th>S? ti?n</th>
                                        <th>Tr?ng thái</th>
                                        <th>Ngày t?o</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var payment in Model.Payments)
                                    {
                                        <tr>
                                            <td>
                                                <small class="text-muted">@(payment.TransactionRef ?? $"PMT-{payment.PaymentId}")</small>
                                            </td>
                                            <td>
                                                <a asp-page="/Customer/MyOrders" class="text-decoration-none">
                                                    #@payment.OrderId
                                                </a>
                                            </td>
                                            <td>
                                                @if (payment.PaymentMethod == "VNPay")
                                                {
                                                    <span class="badge bg-primary">
                                                        <i class="fas fa-credit-card me-1"></i>VNPay
                                                    </span>
                                                }
                                                else if (payment.PaymentMethod == "Cash")
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-money-bill me-1"></i>Ti?n m?t
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@payment.PaymentMethod</span>
                                                }
                                            </td>
                                            <td>
                                                <strong>@payment.Amount.ToString("N0") ?</strong>
                                            </td>
                                            <td>
                                                @switch (payment.Status)
                                                {
                                                    case Domain.Enums.PaymentStatus.Paid:
                                                        <span class="badge bg-success">
                                                            <i class="fas fa-check-circle me-1"></i>@payment.StatusDisplay
                                                        </span>
                                                        break;
                                                    case Domain.Enums.PaymentStatus.Pending:
                                                        <span class="badge bg-warning text-dark">
                                                            <i class="fas fa-clock me-1"></i>@payment.StatusDisplay
                                                        </span>
                                                        break;
                                                    case Domain.Enums.PaymentStatus.Canceled:
                                                        <span class="badge bg-danger">
                                                            <i class="fas fa-times-circle me-1"></i>@payment.StatusDisplay
                                                        </span>
                                                        break;
                                                    case Domain.Enums.PaymentStatus.Refunded:
                                                        <span class="badge bg-info">
                                                            <i class="fas fa-undo me-1"></i>@payment.StatusDisplay
                                                        </span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-secondary">@payment.StatusDisplay</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                <small>@payment.CreatedAtDisplay</small>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Summary Stats -->
                <div class="row mt-4">
                    <div class="col-md-4">
                        <div class="card text-center shadow-sm">
                            <div class="card-body">
                                <h5 class="text-muted">T?ng giao d?ch</h5>
                                <h3 class="fw-bold text-primary">@Model.Payments.Count</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card text-center shadow-sm">
                            <div class="card-body">
                                <h5 class="text-muted">?ã thanh toán</h5>
                                <h3 class="fw-bold text-success">
                                    @Model.Payments.Count(p => p.Status == Domain.Enums.PaymentStatus.Paid)
                                </h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card text-center shadow-sm">
                            <div class="card-body">
                                <h5 class="text-muted">T?ng chi tiêu</h5>
                                <h3 class="fw-bold text-danger">
                                    @Model.Payments.Where(p => p.Status == Domain.Enums.PaymentStatus.Paid).Sum(p => p.Amount).ToString("N0") ?
                                </h3>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
