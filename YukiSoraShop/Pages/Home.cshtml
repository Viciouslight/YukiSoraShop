@page
@{
    ViewData["Title"] = "YukiSora Technology";
    Layout = "~/Pages/Shared/_AuthLayout.cshtml";
}

<div class="container-fluid px-0">
    @if (TempData["LoggedOut"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show m-3" role="alert">
            <i class="fas fa-info-circle me-2"></i> @TempData["LoggedOut"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <section class="hero-section d-flex align-items-center justify-content-center text-center position-relative"
             style="height: 90vh; background: url('/images/jewelry-hero.jpg') center/cover no-repeat;">
        <div class="overlay position-absolute top-0 start-0 w-100 h-100" style="background-color: rgba(0,0,0,0.5);"></div>
        <div class="hero-content position-relative text-white">
            <h1 class="display-3 fw-bold mb-3" style="font-family: 'Playfair Display', serif;">YukiSora Technology</h1>
            <p class="lead mb-4" style="font-weight: 300;">Khám phá công nghệ, sự lựa chọn luôn thuộc về bạn!</p>
            <a href="#featured-products" class="btn btn-light btn-lg px-5 rounded-pill shadow-sm">Khám phá ngay</a>
        </div>
    </section>

    <section class="py-5 bg-light text-center">
        <div class="container">
            <h2 class="fw-bold mb-4" style="font-family: 'Playfair Display', serif;">Vẻ Đẹp Bắt Nguồn Từ Sự Tinh Tế</h2>
            <p class="text-muted mx-auto" style="max-width: 700px;">
                Mỗi sản phẩm tại YukiSora đều được chế tác từ những bàn tay tài hoa, kết hợp giữa nghệ thuật và phong cách hiện đại,
                mang đến vẻ đẹp vừa sang trọng vừa ý nghĩa.
            </p>
        </div>
    </section>

    <section class="py-5">
        <div class="container">
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="card border-0 shadow-sm h-100 text-center p-4 hover-lift">
                        <i class="fas fa-user-circle fa-3x text-warning mb-3"></i>
                        <h5 class="fw-bold mb-2">Khu vực khách hàng</h5>
                        <p class="text-muted mb-4">Xem hồ sơ, đơn hàng và sản phẩm yêu thích của bạn.</p>
                        @{
                            var isAuthenticated = User?.Identity?.IsAuthenticated == true;
                        }
                        @if (!isAuthenticated)
                        {
                            <a href="/Auth/Login" class="btn btn-outline-dark px-4 rounded-pill">Đăng nhập</a>
                        }
                        else
                        {
                            <a href="/Customer/Profile" class="btn btn-outline-dark px-4 rounded-pill">Vào khu vực khách hàng</a>
                        }
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card border-0 shadow-sm h-100 text-center p-4 hover-lift">
                        <i class="fas fa-gem fa-3x text-warning mb-3"></i>
                        <h5 class="fw-bold mb-2">Giỏ hàng của bạn</h5>
                        <p class="text-muted mb-4">Xem lại các sản phẩm đã chọn và sẵn sàng thanh toán.</p>
                        <a href="/Customer/Cart" class="btn btn-outline-dark px-4 rounded-pill">Xem giỏ hàng</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="featured-products" class="py-5 text-center bg-dark text-white">
        <div class="container">
            <h3 class="fw-bold mb-3">Khám phá danh mục sản phẩm</h3>
            <p class="text-light mb-4">Truy cập ngay để xem đầy đủ sản phẩm và ưu đãi.</p>
            <a href="/Customer/Catalog" class="btn btn-warning btn-lg px-5 rounded-pill">Đi tới Catalog</a>
        </div>
    </section>

</div>

@section Scripts {
    <style>
        .translate-up { transform: translateY(-5px); transition: all 0.3s ease; }
        .hover-lift { transition: all 0.3s ease; border-radius: 20px; }
        .hero-section .overlay { backdrop-filter: brightness(60%); }
        .hero-section .hero-content h1, .hero-section .hero-content p { animation: fadeInUp 1s ease; }
    </style>
}
