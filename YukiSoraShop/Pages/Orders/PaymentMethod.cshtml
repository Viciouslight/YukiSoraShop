@page
@model YukiSoraShop.Pages.Orders.OrdersPaymentMethodModel
@{
    ViewData["Title"] = "Chọn phương thức thanh toán";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-9">
            <div class="step-indicator d-flex justify-content-center mb-4">
                <div class="step active"><span>1</span><small>Phương thức</small></div>
                <div class="line"></div>
                <div class="step"><span>2</span><small>Thanh toán</small></div>
                <div class="line"></div>
                <div class="step"><span>3</span><small>Hoàn tất</small></div>
            </div>

            <div class="card border-0 shadow-sm mb-4 rounded-4">
                <div class="card-header bg-gradient-primary text-white rounded-top-4 py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0"><i class="fas fa-wallet me-2"></i>Phương thức thanh toán</h4>
                        <span class="badge bg-light text-dark fs-6">Đơn hàng #@Model.OrderId</span>
                    </div>
                </div>
                <div class="card-body p-4">
                    @await Html.PartialAsync("_Alerts")

                    @if (Model.IsAwaitingCash)
                    {
                        <div class="alert alert-warning shadow-sm">
                            <i class="fas fa-clock me-2"></i>
                            <strong>Đơn hàng đang chờ thanh toán tiền mặt.</strong>
                            <br />
                            <small>Bạn có thể tiếp tục với tiền mặt hoặc đổi sang phương thức khác bên dưới.</small>
                        </div>
                    }

                    <div class="summary-box bg-light p-4 rounded-3 mb-4">
                        <div class="row align-items-center">
                            <div class="col-md-6">
                                <h6 class="text-muted mb-1">Tổng thanh toán</h6>
                                <h2 class="text-primary fw-bold mb-0">@Model.GrandTotal.ToString("N0") <span class="fs-5">VNĐ</span></h2>
                            </div>
                            <div class="col-md-6 text-md-end mt-3 mt-md-0">
                                <small class="text-muted"><i class="fas fa-shield-alt text-success me-1"></i>Giao dịch bảo mật mã hóa SSL</small>
                            </div>
                        </div>
                    </div>

                    @if (Model.PaymentMethods.Count == 0)
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-exclamation-triangle fa-3x text-warning mb-3"></i>
                            <h5 class="fw-bold mb-2">Chưa có phương thức thanh toán</h5>
                            <p class="text-muted">Vui lòng liên hệ quản trị viên hoặc thử lại sau.</p>
                            <a asp-page="/Customer/MyOrders" class="btn btn-outline-secondary me-2"><i class="fas fa-arrow-left me-1"></i>Đơn hàng của tôi</a>
                            <a asp-page="/Customer/Catalog" class="btn btn-primary"><i class="fas fa-store me-1"></i>Mua sắm tiếp</a>
                        </div>
                    }
                    else
                    {
                        <form method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="OrderId" />

                            <h5 class="fw-semibold mb-3"><i class="fas fa-credit-card text-primary me-2"></i>Chọn phương thức thanh toán</h5>
                            <div class="row g-3 mb-4">
                                @foreach (var method in Model.PaymentMethods)
                                {
                                    var iconClass = "fas fa-wallet";
                                    var accent = "primary";
                                    if (string.Equals(method.Name, "Cash", System.StringComparison.OrdinalIgnoreCase))
                                    {
                                        iconClass = "fas fa-money-bill-wave";
                                        accent = "success";
                                    }
                                    else if (string.Equals(method.Name, "VNPay", System.StringComparison.OrdinalIgnoreCase))
                                    {
                                        iconClass = "fas fa-credit-card";
                                        accent = "info";
                                    }
                                    var isChecked = string.Equals(Model.SelectedMethod, method.Name, StringComparison.OrdinalIgnoreCase);
                                    var description = string.IsNullOrWhiteSpace(method.Description)
                                        ? (string.Equals(method.Name, "Cash", StringComparison.OrdinalIgnoreCase)
                                            ? "Thanh toán khi nhận hàng hoặc tại cửa hàng"
                                            : "Thanh toán trực tuyến an toàn qua cổng bảo mật")
                                        : method.Description;

                                    <div class="col-md-6">
                                        <label class="payment-option d-flex align-items-center gap-3 p-3 rounded-3 shadow-sm border position-relative @(isChecked ? "active" : "")" style="cursor:pointer;">
                                            <input class="form-check-input flex-shrink-0 mt-0" type="radio" asp-for="SelectedMethod" value="@method.Name" checked="@isChecked" />
                                            <div class="flex-grow-1">
                                                <h6 class="fw-semibold mb-1"><i class="@iconClass text-@accent me-2"></i>@method.Name</h6>
                                                <small class="text-muted">@description</small>
                                            </div>
                                            <div class="indicator text-@accent">
                                                <i class="fas fa-check-circle"></i>
                                            </div>
                                        </label>
                                    </div>
                                }
                            </div>
                            <span asp-validation-for="SelectedMethod" class="text-danger d-block mb-3"></span>

                            <div class="d-flex justify-content-between align-items-center">
                                <a class="btn btn-outline-secondary" asp-page="/Customer/MyOrders"><i class="fas fa-arrow-left me-2"></i>Đơn hàng của tôi</a>
                                <button type="submit" class="btn btn-gradient btn-lg px-5">Tiếp tục <i class="fas fa-arrow-right ms-2"></i></button>
                            </div>
                        </form>
                    }
                </div>
            </div>

            <div class="card border-info shadow-sm rounded-4">
                <div class="card-body">
                    <h6 class="text-info mb-3"><i class="fas fa-info-circle me-2"></i>Lưu ý quan trọng</h6>
                    <ul class="small mb-0">
                        <li class="mb-2"><strong>Phương thức hiển thị:</strong> Chỉ các phương thức đang được kích hoạt mới xuất hiện.</li>
                        <li class="mb-2"><strong>Thanh toán tiền mặt:</strong> Áp dụng khi nhận hàng hoặc tại cửa hàng (nếu có).</li>
                        <li class="mb-2"><strong>VNPay:</strong> Hỗ trợ ATM, Visa, Mastercard, QR Pay với bảo mật cao.</li>
                        <li class="mb-0"><strong>Bảo mật:</strong> Giao dịch được mã hóa SSL 256-bit và xác thực nhiều lớp.</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary { background: linear-gradient(135deg,#0d47a1,#1976d2,#42a5f5); }
    .btn-gradient { background: linear-gradient(135deg,#0d47a1,#1976d2); color:#fff; border:none; }
    .btn-gradient:hover { filter: brightness(1.05); color:#fff; }
    .payment-option { transition: all .25s ease; }
    .payment-option.active { border:2px solid #1976d2; box-shadow:0 0 0 4px rgba(25,118,210,.15); }
    .payment-option:hover { transform: translateY(-4px); }
    .indicator { opacity:0; transition: .25s; font-size:1.25rem; }
    .payment-option.active .indicator { opacity:1; }
    .step-indicator .step { display:flex; flex-direction:column; align-items:center; gap:4px; }
    .step-indicator .step span { width:42px; height:42px; background:#e0e7ff; display:flex; align-items:center; justify-content:center; border-radius:50%; font-weight:600; font-size:1.1rem; }
    .step-indicator .step.active span { background:linear-gradient(135deg,#0d47a1,#1976d2); color:#fff; box-shadow:0 6px 16px rgba(0,0,0,.2); }
    .step-indicator .line { flex:1; height:4px; background:#e0e7ff; margin:0 12px; border-radius:10px; align-self:center; }
</style>

@section Scripts {
    <script>
        // Auto dismiss alerts after 5 seconds
        setTimeout(() => {
            const alerts = document.querySelectorAll('.alert-dismissible');
            alerts.forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);

        // Debug: Log page load
        console.log('PaymentMethod page loaded');
        console.log('OrderId:', @Model.OrderId);
        console.log('Payment methods count:', @Model.PaymentMethods.Count);
        console.log('Selected method:', '@Model.SelectedMethod');
    </script>
}
