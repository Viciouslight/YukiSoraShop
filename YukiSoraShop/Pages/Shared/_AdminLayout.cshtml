<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - YukiSora Shop Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/admin.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <div class="admin-wrapper">
        <!-- Sidebar -->
        <aside class="admin-sidebar">
            <div class="sidebar-header">
                <h4 class="text-white mb-0">
                    <i class="fas fa-gem"></i> YukiSora Admin
                </h4>
            </div>
            <nav class="sidebar-nav">
                @{
                    var currentPage = ViewContext.RouteData.Values["Page"]?.ToString() ?? "";
                    var isDashboard = currentPage.Contains("/Admin/Dashboard") || currentPage == "/Admin/Dashboard";
                    var isAccountManagement = currentPage.Contains("/Admin/AccountManagement") || currentPage == "/Admin/AccountManagement";
                }
                <a href="/Admin/Dashboard" class="nav-item @(isDashboard ? "active" : "")">
                    <i class="fas fa-chart-line"></i>
                    <span>Analytics</span>
                </a>
                <a href="/Admin/AccountManagement" class="nav-item @(isAccountManagement ? "active" : "")">
                    <i class="fas fa-users"></i>
                    <span>Account Management</span>
                </a>
                <a href="/" class="nav-item">
                    <i class="fas fa-home"></i>
                    <span>Back to Shop</span>
                </a>
            </nav>
        </aside>

        <!-- Main Content -->
        <div class="admin-main">
            <!-- Top Header -->
            <header class="admin-header">
                <div class="header-content">
                    <div class="header-left">
                        <div class="search-box">
                            <i class="fas fa-search"></i>
                            <input type="text" placeholder="Search" />
                        </div>
                    </div>
                    <div class="header-right">
                        <span class="status-badge">Active</span>
                        <span class="status-link">link</span>
                        <div class="user-info">
                            <i class="fas fa-user-circle"></i>
                            <span>Hi, @(User?.Identity?.Name ?? "User")</span>
                            <span class="status-dot"></span>
                        </div>
                        <a href="/Auth/Logout" class="logout-btn">
                            <i class="fas fa-sign-out-alt"></i>
                        </a>
                    </div>
                </div>
            </header>

            <!-- Page Content -->
            <main class="admin-content">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

