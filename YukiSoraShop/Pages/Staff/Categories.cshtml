@page
@model YukiSoraShop.Pages.Staff.CategoriesModel
@{
    ViewData["Title"] = "Quản lý danh mục";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>
                <i class="fas fa-tags text-primary"></i> Quản lý danh mục
            </h1>
            <a href="/Staff/Categories/Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Thêm danh mục mới
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-list"></i> Danh sách danh mục
                </h5>
            </div>
            <div class="card-body">
                @if (Model.Categories != null && Model.Categories.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Tên danh mục</th>
                                    <th>Mô tả</th>
                                    <th>Trạng thái</th>
                                    <th>Ngày tạo</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var category in Model.Categories)
                                {
                                    <tr>
                                        <td>@category.Id</td>
                                        <td>@category.CategoryName</td>
                                        <td>@(string.IsNullOrEmpty(category.Description) ? "Không có mô tả" : category.Description)</td>
                                        <td>
                                            @if (category.IsActive)
                                            {
                                                <span class="badge bg-success">Hoạt động</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Không hoạt động</span>
                                            }
                                        </td>
                                        <td>@category.CreatedAt.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="/Staff/Categories/Edit/@category.Id" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-edit"></i> Sửa
                                                </a>
                                                <a href="/Staff/Categories/Delete/@category.Id" class="btn btn-sm btn-outline-danger" 
                                                   onclick="return confirm('Bạn có chắc chắn muốn xóa danh mục này?')">
                                                    <i class="fas fa-trash"></i> Xóa
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-tags fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">Chưa có danh mục nào</h5>
                        <p class="text-muted">Hãy thêm danh mục đầu tiên của bạn!</p>
                        <a href="/Staff/Categories/Create" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Thêm danh mục
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
