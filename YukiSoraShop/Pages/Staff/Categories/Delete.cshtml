@page "{id:int}"
@model YukiSoraShop.Pages.Staff.Categories.StaffCategoryDeleteModel
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "Moderator")]
@{
    ViewData["Title"] = "Xóa danh mục";
}

@await Html.PartialAsync("_Alerts")

<div class="alert alert-warning"><i class="fas fa-exclamation-triangle"></i> Bạn có chắc chắn muốn xóa danh mục "<strong>@Model.Category?.CategoryName</strong>"?</div>

<form method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Category.Id" />
    <button class="btn btn-danger" type="submit"><i class="fas fa-trash"></i> Xóa</button>
    <a href="/Staff/Categories/List" class="btn btn-secondary ms-2"><i class="fas fa-arrow-left"></i> Hủy</a>
</form>
