@page
@model YukiSoraShop.Pages.Staff.Categories.StaffCategoriesModel
@{
    ViewData["Title"] = "Quản lý danh mục";
}

<div class="container-fluid py-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-light px-3 py-2 rounded shadow-sm">
                    <li class="breadcrumb-item"><a href="/" class="text-decoration-none"><i class="fas fa-home me-1"></i>Trang chủ</a></li>
                    <li class="breadcrumb-item"><a href="/Customer/Catalog" class="text-decoration-none">Sản phẩm</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Quản lý danh mục</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="fw-bold text-dark mb-1">
                        <i class="fas fa-tags text-primary me-2"></i>Quản lý danh mục
                    </h2>
                    <p class="text-muted mb-0">Quản lý các danh mục sản phẩm trong cửa hàng</p>
                </div>
                <a href="/Staff/Categories/Create" class="btn btn-primary shadow-sm">
                    <i class="fas fa-plus me-2"></i>Thêm danh mục mới
                </a>
            </div>
        </div>
    </div>

    <!-- Categories Table Card -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 fw-semibold">
                            <i class="fas fa-list text-primary me-2"></i>Danh sách danh mục
                        </h5>
                        @if (Model.Categories != null && Model.Categories.Any())
                        {
                            <span class="badge bg-primary">@Model.Categories.Count danh mục</span>
                        }
                    </div>
                </div>
                <div class="card-body p-0">
                    @await Html.PartialAsync("_Alerts")
                    
                    @if (Model.Categories != null && Model.Categories.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="text-center" style="width: 80px;">ID</th>
                                        <th>Tên danh mục</th>
                                        <th>Mô tả</th>
                                        <th class="text-center">Trạng thái</th>
                                        <th class="text-center">Ngày tạo</th>
                                        <th class="text-center" style="width: 150px;">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var category in Model.Categories)
                                    {
                                        <tr>
                                            <td class="text-center fw-semibold">#@category.Id</td>
                                            <td>
                                                <div class="fw-semibold">
                                                    <i class="fas fa-tag text-muted me-2"></i>@category.CategoryName
                                                </div>
                                            </td>
                                            <td>
                                                @if (string.IsNullOrEmpty(category.Description))
                                                {
                                                    <span class="text-muted fst-italic">Không có mô tả</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">@(category.Description.Length > 80 ? category.Description.Substring(0, 80) + "..." : category.Description)</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                @if (category.IsActive)
                                                {
                                                    <span class="badge bg-success"><i class="fas fa-check-circle me-1"></i>Hoạt động</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary"><i class="fas fa-pause-circle me-1"></i>Tạm ngưng</span>
                                                }
                                            </td>
                                            <td class="text-center text-muted">
                                                <small>
                                                    <i class="fas fa-calendar me-1"></i>@category.CreatedAt.ToString("dd/MM/yyyy")
                                                </small>
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a href="/Staff/Categories/Edit/@category.Id" class="btn btn-outline-primary" title="Chỉnh sửa">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a href="/Staff/Categories/Delete/@category.Id" class="btn btn-outline-danger" title="Xóa">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-tags fa-4x text-muted mb-3"></i>
                            <h5 class="text-muted">Chưa có danh mục nào</h5>
                            <p class="text-muted mb-4">Hãy thêm danh mục đầu tiên của bạn!</p>
                            <a href="/Staff/Categories/Create" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>Thêm danh mục
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

