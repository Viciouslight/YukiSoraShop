@page
@model YukiSoraShop.Pages.Staff.ProductsModel
@{
    ViewData["Title"] = "Quản lý sản phẩm";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>
                <i class="fas fa-box text-primary"></i> Quản lý sản phẩm
            </h1>
            <a href="/Staff/Products/Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Thêm sản phẩm mới
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-list"></i> Danh sách sản phẩm
                </h5>
            </div>
            <div class="card-body">
                @if (Model.Products != null && Model.Products.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Tên sản phẩm</th>
                                    <th>Giá</th>
                                    <th>Số lượng</th>
                                    <th>Danh mục</th>
                                    <th>Trạng thái</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in Model.Products)
                                {
                                    <tr>
                                        <td>@product.Id</td>
                                        <td>@product.ProductName</td>
                                        <td>@product.Price.ToString("C0")</td>
                                        <td>@product.StockQuantity</td>
                                        <td>@product.CategoryName</td>
                                        <td>
                                            <span class="badge bg-success">Còn hàng</span>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="/Staff/Products/Edit/@product.Id" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-edit"></i> Sửa
                                                </a>
                                                <a href="/Staff/Products/Delete/@product.Id" class="btn btn-sm btn-outline-danger" 
                                                   onclick="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này?')">
                                                    <i class="fas fa-trash"></i> Xóa
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-box fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">Chưa có sản phẩm nào</h5>
                        <p class="text-muted">Hãy thêm sản phẩm đầu tiên của bạn!</p>
                        <a href="/Staff/Products/Create" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Thêm sản phẩm
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
