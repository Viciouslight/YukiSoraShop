@page "{id:int}"
@model YukiSoraShop.Pages.Staff.Products.StaffProductDeleteModel
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "Moderator")]
@{
    ViewData["Title"] = "Xoá sản phẩm";
}

<div class="row">
    <div class="col-12">
        <h1 class="mb-4 text-danger">
            <i class="fas fa-trash"></i> Xoá sản phẩm
        </h1>
    </div>
</div>

<div class="alert alert-warning">
    <i class="fas fa-exclamation-triangle"></i>
    Bạn có chắc chắn muốn xoá sản phẩm "<strong>@Model.Product?.ProductName</strong>"?
</div>

<form method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Product.Id" />
    <button type="submit" class="btn btn-danger">
        <i class="fas fa-trash"></i> Xoá
    </button>
    <a href="/Staff/Products/List" class="btn btn-secondary ms-2">
        <i class="fas fa-arrow-left"></i> Huỷ
    </a>
    </form>

