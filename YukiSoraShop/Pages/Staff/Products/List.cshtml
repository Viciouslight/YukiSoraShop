@page
@model YukiSoraShop.Pages.Staff.Products.StaffProductsModel
@{
    ViewData["Title"] = "Quản lý sản phẩm";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>
                <i class="fas fa-box text-primary"></i> Quản lý sản phẩm
            </h1>
            <a href="/Staff/Products/Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Thêm sản phẩm mới
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-list"></i> Danh sách sản phẩm
                </h5>
            </div>
            <div class="card-body">
                @await Html.PartialAsync("_Alerts")
                <form method="get" class="row g-2 mb-3">
                    <div class="col-sm-6 col-md-4">
                        <input class="form-control" type="text" name="search" value="@Model.Search" placeholder="Tìm sản phẩm..." />
                    </div>
                    <div class="col-sm-6 col-md-4">
                        <select class="form-select" name="category" asp-items="Model.CategoryOptions">
                            <option value="">-- Tất cả danh mục --</option>
                        </select>
                    </div>
                    <div class="col-sm-12 col-md-4">
                        <input type="hidden" name="size" value="@Model.Size" />
                        <button class="btn btn-outline-primary" type="submit">Lọc</button>
                    </div>
                </form>
                @if (Model.Products != null && Model.Products.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Tên sản phẩm</th>
                                    <th>Giá</th>
                                    <th>Số lượng</th>
                                    <th>Danh mục</th>
                                    <th>Trạng thái</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in Model.Products)
                                {
                                    <tr>
                                        <td>@product.Id</td>
                                        <td>@product.ProductName</td>
                                        <td>@product.Price.ToString("C0")</td>
                                        <td>@product.StockQuantity</td>
                                        <td>@product.CategoryName</td>
                                        <td>
                                            <span class="badge bg-success">Còn hàng</span>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="/Staff/Products/Edit/@product.Id" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-edit"></i> Sửa
                                                </a>
                                                <a href="/Staff/Products/Delete/@product.Id" class="btn btn-sm btn-outline-danger">
                                                    <i class="fas fa-trash"></i> Xóa
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <nav aria-label="Product pagination" class="mt-3">
                        <ul class="pagination">
                            <li class="page-item @(Model.Page <= 1 ? "disabled" : null)">
                                <a class="page-link" href="?page=@(Model.Page-1)&size=@Model.Size&search=@Model.Search&category=@Model.Category">Trước</a>
                            </li>
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.Page ? "active" : null)">
                                    <a class="page-link" href="?page=@i&size=@Model.Size&search=@Model.Search&category=@Model.Category">@i</a>
                                </li>
                            }
                            <li class="page-item @(Model.Page >= Model.TotalPages ? "disabled" : null)">
                                <a class="page-link" href="?page=@(Model.Page+1)&size=@Model.Size&search=@Model.Search&category=@Model.Category">Sau</a>
                            </li>
                        </ul>
                    </nav>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-box fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">Chưa có sản phẩm nào</h5>
                        <p class="text-muted">Hãy thêm sản phẩm đầu tiên của bạn!</p>
                        <a href="/Staff/Products/Create" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Thêm sản phẩm
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

